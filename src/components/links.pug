mixin links(type, links)
  nav(class=`links ${type}`)
    .links__col
      ul.links__list
        include ./linksItem
        if links.length < 6
          each link in links
            +links__item(link.name)
        else 
          each link in links.slice(0, Math.ceil(links.length / 2))
            +links__item(link.name)
    if links.length > 6
      .links__col
        ul.links__list
          include ./linksItem
          each link in links.slice(Math.ceil(links.length / 2))
            +links__item(link.name)
      